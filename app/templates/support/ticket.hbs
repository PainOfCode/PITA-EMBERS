<div class="row">
  <div class="col-4 outline_4_s">
    <form>
        <div>
            <label>Title</label><br>
            {{input class="bg_nav outline_4_s" type="text" required=true value=model.title}}
        </div>
        <div>
            <label>Subject</label><br>

            {{input class="bg_nav outline_4_s" type="text" required=true value=model.subject placeholder="Add subject"}}
        </div>
        <div>
            <label>Occured date</label><br>

            {{pikaday-input class="bg_nav outline_4_s" onSelection=(action 'setDate') id="pikaday" placeholder="Date" type="date" value=model.date format="YYYY-MM-DD"}}
        </div>
        <div>
            <label>Description</label><br>

            {{textarea class="bg_nav outline_4_s" cols="40" rows="5" required=true value=model.content placeholder="Add Description"}}
        </div>
        <button class="bg_nav outline_4_s" {{action 'saveTicket'}}>Save ticket</button>
        <button class="bg_nav outline_4_s" {{action 'deleteTicket'}}>Delete ticket</button>

    </form>


  </div>
</div>
